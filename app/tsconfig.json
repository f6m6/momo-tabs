{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "jsx": "react",
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmitHelpers": false,
        "noImplicitAny": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "outDir": "build/tmp",
        "removeComments": false,
        "sourceMap": true,
        "strict": true,
        "strictNullChecks": true,
        "target": "ES5",
        "skipLibCheck": true
    },
    "exclude": [
        "build",
        "node_modules",
        "test"
    ]
}
