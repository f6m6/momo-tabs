{
    "name": "guitar",
    "version": "0.1.0",
    "main": "index.js",
    "author": "Miklos Danka",
    "engines": {
        "node": "10"
    },
    "scripts": {
        "build": "npm-run-all build:client -p build:server",
        "build:client": "npm-run-all clean:client -s createBuildDir:client -s bundle:client",
        "build:server": "npm-run-all clean:server -s createBuildDir:server -s bundle:server",
        "bundle:server": "webpack --config webpack.server.config.js",
        "bundle:client": "webpack --config webpack.client.config.js",
        "clean:client": "rimraf dist",
        "clean:server": "rimraf functions",
        "createBuildDir:client": "mkdirp dist",
        "createBuildDir:server": "mkdirp functions",
        "deploy": "./scripts/deploy.sh",
        "lint": "tslint -c tslint.json `find src -name '*.ts' -o -name '*.tsx'`",
        "lint-fix": "tslint --fix -c tslint.json `find src -name '*.ts' -o -name '*.tsx'`",
        "serve": "./scripts/serve.sh",
        "watch": "npm-run-all watch:client -p watch:server",
        "watch:client": "yarn run createBuildDir:client && webpack -d -w --config webpack.client.config.js",
        "watch:server": "yarn run createBuildDir:server && webpack -d -w --config webpack.server.config.js",
        "verify": "yarn run es-check es5 './dist/bundle.js'"
    },
    "dependencies": {
        "@blueprintjs/core": "^3.4.0",
        "@blueprintjs/icons": "^3.1.0",
        "@material-ui/core": "^1.5.1",
        "@material-ui/icons": "^3.0.1",
        "classnames": "^2.2.5",
        "commonjs": "^0.0.1",
        "es6-shim": "^0.35.3",
        "firebase": "^5.4.1",
        "firebase-admin": "^6.1.0",
        "firebase-functions": "^2.1.0",
        "firebaseui": "^3.5.2",
        "fs-extra": "^7.0.0",
        "immutable": "^3.8.2",
        "jss": "^9.8.7",
        "mobile-detect": "^1.4.3",
        "momo-chords": "^0.4.3",
        "normalize.css": "^5.0.0",
        "query-string": "^6.1.0",
        "re-reselect": "^2.1.0",
        "react": "^16.4.2",
        "react-addons-css-transition-group": "^15.6.2",
        "react-addons-update": "^15.6.2",
        "react-document-title": "^2.0.3",
        "react-dom": "^16.4.2",
        "react-jss": "^8.6.1",
        "react-logger": "^1.1.0",
        "react-redux": "^5.0.7",
